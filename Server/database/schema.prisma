datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
generator client {
  provider = "prisma-client-js"
}

model User {
  id String @default(cuid()) @id
  role Role @default(value: USER)
  accountName String @unique
  password String
  firstName String
  name String
  pseudonym String
  birthDate DateTime
  description String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
}
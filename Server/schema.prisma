datasource postgresql {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id String @default(cuid()) @id
  accountName String @unique
  password String
  firstName String
  name String
  pseudonym String @unique
  birthDate DateTime
  description String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id String @default(cuid()) @id
  name String
}

model Contact {
  id String @default(cuid()) @id
  creator String? 
  firstName String
  name String
  description String
  phone Int
  city String
  studies String
  user User? @relation(fields: [creator], references: [id])
  categories Category[]
}